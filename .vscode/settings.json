{
  // Explicitly tell ESLint extension to watch typescript files for linting errors
  "eslint.validate": ["typescript", "typescriptreact", "json"],
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.fixAll.stylelint": "explicit"
  },
  "files.associations": {
    "*.css": "tailwindcss"
  },
  "editor.quickSuggestions": {
      "strings": true
  }
}
